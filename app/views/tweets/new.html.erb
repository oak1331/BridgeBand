<div class="contents">
  <div class="container">
    <h3>投稿フォーム</h3>
    <%= form_with(model: @tweet, local: true) do |form| %>
      <div class = "container-name">
        <%= form.text_field :nickname, placeholder: "ニックネーム", size: "50"  %>
      </div>
      <div class = "container-title">
        <%= form.text_field :title, placeholder: "タイトル", size: "50"  %>
      </div>
      <div class = "container-comment">
        <%= form.text_area :text, placeholder: "コメント", size: "50x10" %>
      </div>
      <div class = "container-image">
        <%= form.file_field :image %>
      </div>
      <div class = "container-post">
        <%= form.submit " 投稿 " %>
      </div>
    <% end %>
  </div>
</div>