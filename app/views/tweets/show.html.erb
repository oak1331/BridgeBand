<div>
  <div>
    <%= image_tag @tweet.image.variant(resize: '530x300') %>
  </div>
    <div>
    <%= link_to @tweet.user.name, user_path(@tweet.user.id) %>
  </div>
  <div>
    <%= @tweet.title %>
  </div>
    <div>
    <%= @tweet.text %>
  </div>
</div>

<% if user_signed_in? && current_user.id == @tweet.user_id %>
  <ul>
    <li>
      <%= link_to "編集", edit_tweet_path(@tweet.id) %>
    </li>
        <li>
      <%= link_to "削除", tweet_path(@tweet.id), method: :delete %>
    </li>
  </ul>
<% end %>

<div class="prototype__comments">
  <% if user_signed_in? %>
    <%= form_with model: [@tweet, @comment], local: true do |f| %>
      <div class = "field">
        <%= f.label :text, "コメント" %><br />
        <%= f.text_field :text %>
      </div>
      <div class = "actions">
        <%= f.submit "送信する", class: :form__btn %>
      </div>
    <% end %> 
  <% end %>
  <ul class = "comments_lists">
      <li class = "comments_list">
        <% @comments.each do |comment| %>
          <p>
            <%= comment.text %>
            <%= link_to comment.user.name , user_path(@tweet.user.id), class: :comment_user %>
          </p>
        <% end %>
      </li>
  </ul>
</div>

<div class = "star-btn" id = "favorite_<%= @tweet.id %>">
  <%= render partial: "favorites/favorite", locals: { tweet: @tweet } %>
</div>