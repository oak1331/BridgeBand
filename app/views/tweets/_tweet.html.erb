<div class = "tweet-box">
  <div class = "tweet-image">
    <%= link_to image_tag( tweet.image.variant(resize: '320x180') ), tweet_path(tweet.id) %>
  </div>
  <div class = "tweet-name">
    <%= link_to tweet.user.name, user_path(tweet.user.id) %>
  </div>
  <div class = "tweet-title">
    <%= link_to tweet.title, tweet_path(tweet.id) %>
  </div>
</div>