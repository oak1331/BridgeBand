<div class = "devise-view">
  <h1 class="header-logo"><a href='/'>Bridge Band</a></h1>
  <div class="devise-login">
    <div class="inner-box">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h1>ログイン</h1>
        <div class="email-box">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="password-box">
          <div>
            <div class="column-left">
              <%= f.label :password %>
            </div>
            <div class="column-right">
              <%= link_to "パスワードを忘れた場合", new_user_password_path, class: "forget-password" %>
            </div>
          </div>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <div class="login-box">
          <%= f.submit "ログイン" %>
          <% if devise_mapping.rememberable? %>
            <div class="remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>
      <% end %>
      <div class="newuser-box">
        <p><span>----------</span> BridgeBandは初めてご利用ですか？ <span>----------</span></p>
        <%= link_to "BridgeBandアカウントを作成", new_user_registration_path, class: "account" %>
      </div>
    </div>
  </div>
</div>